<p id="notice"><%= notice %></p>
<h3><%= current_user_account.email %></h3> 

<h1>Posting History</h1>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Book</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>  

    <tbody>
      <% current_user_account.books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td> Posted </td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Delete my account', current_user_account, method: :delete, data: { confirm: 'Are you sure?' }  %>

</div>
