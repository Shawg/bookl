<div class="container">
	<h1>Displaying Books</h1>
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>ISBN</th>
	      <th>Volume</th>
	      <th>Edition<th>
	      <th colspan="4"></th>
	    </tr>
	  </thead>	

	  <tbody>
	    <% @books.each do |book| %>
	    <tr>
	       	<td><%= book.title %></td>
	        <td><%= book.ISBN %></td>
	        <td><%= book.volume %></td>
	        <td><%= book.edition %></td>
	        <td><%= link_to 'Show', book %></td>
	        <td><%= link_to 'Edit', edit_book_path(book) %></td>
	        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
