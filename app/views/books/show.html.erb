<div class="container">
	<div class="main-info">
		<h1 class="book-price">$<%= @book.post.price %></h1>
		<h1 class="book-title"> <%= @book.title %> </h1>
		<h1 class="book-ed-vol">
			<% unless @book.edition.blank? and @book.volume.blank? %>
				[ <% unless @book.edition.blank? %>
					Ed. <%= @book.edition %>
				<% end %>
				<% unless @book.volume.blank? %>
					Vol. <%= @book.volume %>
				<% end %> ]
			<% end %>
		</h1>
	</div>
	<div class="content">
		<h1 class="book-authors">
			<% auths = "" %>
			<% @book.author_books.each do |ab| %>
				<% auths += ab.author.au_fname + " " + ab.author.au_lname + ", " %>
			<% end %>
			<%= auths[0..-3] %>
		</h1>
		<h1 class="book-description"><%= @book.post.description %></h1>
		<h1 class="book-courses">
			<% cours = "" %>
			<% @book.book_courses.each do |bc| %>
				<% cours += bc.course.department + bc.course.course_number.to_s + ", " %>
			<%end%>
			<%= cours[0..-3] %>
		</h1>
		<h1><a class="contact contact-info" href="#" data-email="<%= @book.user_account.email %>"> Contact Info</a></h1>
	</div>
</div>